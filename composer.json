{
    "name": "apache/log4php",
    "description": "A versatile logging framework for PHP",
    "keywords": ["log","logging"],
    "homepage": "http://logging.apache.org/log4php",
    "license": "Apache-2.0",
    "version": "3.0.0-dev",
    "require": {
        "php": ">=5.3.0"
    },
    
    "repositories": [
        {
            "type": "pear",
            "url": "http://pear.php.net"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "apigen/apigen": "2.*",
        "twig/twig": "1.*",
        "phing/phing": "dev-master",
        "netcarver/textile": "dev-master",
        "pear-pear.php.net/PEAR": "*",
        "pear-pear.php.net/Archive_Tar": ">=1.3.0",
        "pear-pear.php.net/PHP_CodeSniffer": ">=1.4.0"
    },
    "autoload": {
        "psr-0": {
            "Apache\\log4php": "src/"
        },
        "classmap": ["lib/phing/task"]
    }
}
